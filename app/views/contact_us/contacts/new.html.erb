<div class="body-contact-alone">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-6 col-md-offset-3 col-xs-12">
        <%= render 'shared/flash_messages' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-10 col-md-offset-1 col-xs-12">
        <h2 align="center" style="color: #666">Ponte en contacto con nosotros</h2>
      </div>
    </div>
    <br/>
    <%= form_for @contact, url: contacts_path, html: {class: 'formtastic'} do |f| %>
        <div class="row">
          <div class="col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4 col-xs-12">
            <div class="form-horizontal">
              <% if ContactUs.require_name %>
                  <div class="col-md-5 col-xs-12">
                    <div class="form-group">
                      <div class='string required' id='contact_us_contact_name_input'>
                        <%= f.text_field :name, class: 'form-control', placeholder: 'Nombre' %>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-5 col-md-offset-2 col-xs-12">
                    <div class="form-group">
                      <div class='string required' id='contact_us_contact_email_input'>
                        <%= f.text_field :email, class: 'form-control', placeholder: 'Correo electrónico' %>
                      </div>
                    </div>
                  </div>
              <% else %>
                  <div class="col-xs-12">
                    <div class="form-group">
                      <div class='string required' id='contact_us_contact_email_input'>
                        <%= f.text_field :email, class: 'form-control', placeholder: 'Correo electrónico' %>
                      </div>
                    </div>
                  </div>
              <% end %>
              <% if ContactUs.require_subject %>
                  <div class="col-xs-12">
                    <div class="form-group">
                      <div class='string required' id='contact_us_contact_subject_input'>
                        <%= f.text_field :subject, placeholder: 'Asunto' %>
                      </div>
                    </div>
                  </div>
              <% end %>
              <div class="col-xs-12">
                <div class="form-group">
                  <div class='text required' id='contact_us_contact_message_input'>
                    <%= f.text_area :message, class: 'form-control', rows: '5', placeholder: 'Mensaje' %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-2 col-md-offset-5 col-xs-12">
            <%= f.submit t('.submit'), id: 'btn_submit', class: 'btn btn-primary btn-block' %>
          </div>
        </div>
        <br/>
    <% end %>
  </div>
  <%# Chanchada
  TODO: ver como arreglar esto%>
  <% for num in 1...14 %>
      <br/>
  <% end %>
</div>