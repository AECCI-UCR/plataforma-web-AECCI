<div class="body-contact">
  <br/>
  <br/>
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-6 col-md-offset-3 col-xs-12">
        <%= render 'shared/flash_messages' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-10 col-md-offset-1 col-xs-12">
        <h2 align="center" style="color: white">Ponte en contacto con nosotros</h2>
      </div>
    </div>
    <br/>
    <%= form_for @contact, url: contacts_path, html: {class: 'formtastic'} do |f| %>
        <div class="row">
          <div class="col-md-4 col-md-offset-4 col-xs-12">
            <div class="form-horizontal">
              <div class="form-group">
                <div class="col-md-6 col-xs-12">
                  <% if ContactUs.require_name %>
                      <div class='string required' id='contact_us_contact_name_input'>
                        <%= f.text_field :name, class: 'form-control', placeholder: 'Nombre' %>
                        <% if f.object.errors[:name].present? %>
                            <p class='inline-error text-danger'><%= f.object.errors[:name].join(' y ') %></p>
                        <% end %>
                      </div>
                  <% end %>
                </div>
                <div class="col-md-6 col-xs-12">
                  <div class='string required' id='contact_us_contact_email_input'>
                    <%= f.text_field :email, class: 'form-control', placeholder: 'Correo electrÃ³nico' %>
                    <% if f.object.errors[:email].present? %>
                        <p class='inline-error text-danger'><%= f.object.errors[:email].join(' y ') %></p>
                    <% end %>
                  </div>
                </div>
              </div>
              <% if ContactUs.require_subject %>
                  <div class="form-group">
                    <div class="col-xs-12">
                      <div class='string required' id='contact_us_contact_subject_input'>
                        <%= f.text_field :subject, placeholder: 'Asunto' %>
                        <% if f.object.errors[:subject].present? %>
                            <p class='inline-error text-danger'><%= f.object.errors[:subject].join(' y ') %></p>
                        <% end %>
                      </div>
                    </div>
                  </div>
              <% end %>
              <div class="form-group">
                <div class="col-xs-12">
                  <div class='text required' id='contact_us_contact_message_input'>
                    <%= f.text_area :message, class: 'form-control', rows: '5', placeholder: 'Mensaje' %>
                    <% if f.object.errors[:message].present? %>
                        <p class='inline-error text-danger'><%= f.object.errors[:message].join(' y ') %></p>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-2 col-md-offset-5 col-xs-12">
            <%= f.submit t('.submit'), id: 'btn_submit', class: 'btn btn-default btn-block' %>
          </div>
        </div>
        <br/>
    <% end %>
  </div>
  <%# Chanchada
  TODO: ver como arreglar esto%>
  <% for num in 1...17 %>
      <br/>
  <% end %>
</div>