<p id="notice"><%= notice %></p>

<h1>Listing Tests</h1>

<table>
  <thead>
    <tr>
      <th>Year</th>
      <th>Teacher</th>
      <th>Semester</th>
      <th>Test number</th>
      <th>File url</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.year %></td>
        <td><%= test.teacher %></td>
        <td><%= test.semester %></td>
        <td><%= test.test_number %></td>
        <td><%= test.file_url %></td>
        <td><%= test.course %></td>
        <td><%= link_to 'Show', test %></td>
        <td><%= link_to 'Edit', edit_test_path(test) %></td>
        <td><%= link_to 'Destroy', test, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

