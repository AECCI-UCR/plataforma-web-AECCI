<p id="notice"><%= notice %></p>

<!-- Esta deberia de ser la vista para los miembros de la asocia -->
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h1>Anuncios del sitio</h1>
    <hr/>
  </div>
</div>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <div class="col-xs-12">
            <h2>Administrador de anuncios</h2>
            <hr/>
          </div>
        </div>
        <div class="row">
          <div class="col-md-10 col-md-offset-1">
            <table class="table table-striped">
              <thead>
              <tr>
                <th>Título</th>
                <th>En el carousel</th>
                <th colspan="3"> Acciones</th>
              </tr>
              </thead>
              <tbody>
              <% @ads.each do |ad| %>
                  <tr>
                    <td><%= ad.title %></td>
                    <td><%= ad.important? ? 'Si' : 'No' %></td>
                    <td>
                      <%= link_to ad do %>
                          <span class="glyphicon glyphicon-eye-open text-info" aria-hidden="true"></span>
                      <% end %>
                    </td>
                    <td>
                      <%= link_to edit_ad_path(ad) do %>
                          <span class="text-warning glyphicon glyphicon-edit" aria-hidden="true"></span>
                      <% end %>
                    </td>
                    <td>
                      <%= link_to ad, method: :delete, data: {confirm: '¿Esta seguro?'} do %>
                          <span class="text-danger glyphicon glyphicon-erase" aria-hidden="true"></span>
                      <% end %>
                    </td>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-2 col-md-offset-8">
    <%= link_to 'Agregar un anuncio', new_ad_path, class: 'btn btn-primary btn-block' %>
  </div>
</div>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <hr/>
  </div>
</div>


<!-- Los otros usuarios deben de tener otra vista-->
<% @ads.each do |ad| %>
    <div class="row">
      <div class="col-md-offset-1 col-md-10 col-lg-8 col-lg-offset-2">
        <div class="row">
          <div class="col-md-12">
            <h3> <%= ad.title %></h3>
            <br/>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4">
            <%= ad.description %>
          </div>
          <div class="col-md-8">
            <%= image_tag ad.image_url, class: 'img-responsive img-rounded' %>
          </div>
        </div>
        <hr/>
      </div>
    </div>
<% end %>