<br/>
<%= devise_error_messages! %>
<div class="row">
  <div class="col-md-6 col-md-offset-3 col-xs-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <div class="col-xs-12">
            <h3>¿Olvidó su contraseña?</h3>
            <hr/>
          </div>
        </div>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>
            <div class="form-horizontal">
              <div class="form-group">
                <div class="col-xs-12 col-md-10 col-md-offset-1">
                  <%= f.email_field :email, placeholder: 'Correo electrónico', autofocus: true, class: 'form-control' %>
                </div>
              </div>
              <div class="row">
                <hr/>
              </div>
              <div class="row">
                <div class="col-xs-12">
                  <%= f.submit 'Enviar instrucciones para reestablecer contraseña', class: 'btn btn-block btn-primary' %>
                </div>
              </div>
            </div>
        <% end %>
      </div>
    </div>
    <%= render 'devise/shared/links' %>
  </div>
</div>

