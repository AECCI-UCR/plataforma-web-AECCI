<div class="row">
  <div class="col-md-6 col-md-offset-3 col-xs-12">
    <h3>Registrarse</h3>
    <hr/>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-horizontal">
          <div class="form-group">
            <div class="col-xs-12">
              <%= f.email_field :email, autofocus: true, placeholder: 'Número de carné + @ecci.ucr.ac.cr', class:'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-xs-12">
              <% caracteres_minimos_placeholder = 'Contraseña' %>
              <% if @minimum_password_length %>
                  <% caracteres_minimos_placeholder += ": #{@minimum_password_length} caracteres mínimos" %>
              <% end %>
              <%= f.password_field :password, autocomplete: 'off', placeholder: caracteres_minimos_placeholder, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-xs-12">
              <%= f.password_field :password_confirmation, autocomplete: 'off', placeholder: 'Confirmación contraseña', class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-xs-12">
              <%= f.submit 'Registrarse', class: 'btn btn-block btn-primary' %>
            </div>
          </div>
        </div>
    <% end %>
    <hr/>
    <%= render 'devise/shared/links' %>
  </div>
</div>

