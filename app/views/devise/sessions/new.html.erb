<br/>
<div class="row">
  <div class="col-md-6 col-md-offset-3 col-xs-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12 col-xs-12">
            <h2>Inicio de sesión</h2>
            <hr/>
          </div>
        </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-horizontal">
              <div class="form-group">
                <div class="col-md-10 col-md-offset-1 col-xs-12">
                  <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Correo electrónico' %>
                </div>
              </div>
              <div class="form-group">
                <div class="col-md-10 col-md-offset-1 col-xs-12">
                  <%= f.password_field :password, autocomplete: 'off', placeholder: 'Contraseña', class: 'form-control' %>
                </div>
              </div>
              <div class="form-group">
                <div class="col-xs-12 col-md-offset-1 col-md-10">
                  <% if devise_mapping.rememberable? -%>
                      <div class="field">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me, 'No cerrar sesión' %>
                      </div>
                  <% end -%>
                </div>
              </div>
              <div class="row">
                <hr/>
              </div>
              <div class="row">
                <div class="col-xs-12">
                  <%= f.submit 'Iniciar sesión', class: 'btn btn-primary btn-block' %>
                </div>
              </div>
            </div>
        <% end %>
      </div>
    </div>
    <%= render 'devise/shared/links' %>
  </div>
</div>