<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form loginBox') do |f| %>

    <div class="input-group">
      <%= f.text_field :email, class: 'form-control', placeholder: 'Número de carné', autofocus: true, 'aria-describedby' => 'basic-addon2' %>
      <span class="input-group-addon" id="basic-addon2">@ecci.ucr.ac.cr</span>
    </div>
    <br/>

    <%= f.password_field :password, class: 'form-control', placeholder: 'Digite su contraseña', autocomplete: 'off' %>

    <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, 'Recuerdame' %>
        </div>
    <% end -%>

    <div class="actions">
      <%= f.submit 'Autenticarse', class: 'btn "btn btn-primary' %>
    </div>
<% end %>

<%= render 'devise/shared/links' %>
