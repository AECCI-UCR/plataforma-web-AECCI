<%# Layout de un rotating card, necesita las siguientes variables:
    * backgroud_image: ruta de la imagen que quiere desplegar en el fondo
    * user_image: imagen del usuario
    * name: nombre del usuario
    * profession: profesion del usuario
    * location: lugar donde vive el usuario (provincia, pais)
    * email: correo del usuario
    * motto: cita que el usuario quiere que se despliegue
    * experience: texto con la experiencia que posee el usuario
    * github: url al perfil de github
%>
<div class="card-container">
  <div class="card">
    <div class="front">
      <div class="cover">
        <%= image_tag backgroud_image %>
      </div>
      <div class="user">
        <%= image_tag user_image, class: 'img-circle' %>
      </div>
      <div class="content">
        <div class="main">
          <h3 class="name"><%= name %></h3>
          <p class="profession"><%= profession %></p>
          <h5><i class="fa fa-map-marker fa-fw text-muted"></i> <%= location %></h5>
          <h5><i class="fa fa-envelope-o fa-fw text-muted"></i> <%= email %></h5>
        </div>
        <div class="footer">
          <div class="rating">
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
          </div>
        </div>
      </div>
    </div> <!-- end front panel -->
    <div class="back">
      <div class="header">
        <h5 class="motto"><%= motto %></h5>
      </div>
      <div class="content">
        <div class="main">
          <h4 class="text-center">Experiencia</h4>
          <p><%= experience %></p>
        </div>
      </div>
      <div class="footer">
        <div class="social-links text-center">
          <%= link_to github, target: '_blank' do %><i class="fa fa-github fa-fw"></i>
          <% end %>
          <%= mail_to email do %><i class="fa fa-envelope fa-fw"></i>
          <% end %>
        </div>
      </div>
    </div> <!-- end back panel -->
  </div> <!-- end card -->
</div> <!-- end card-container -->