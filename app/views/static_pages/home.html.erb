<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h3>Anuncios varios</h3>
  </div>
</div>

<%# El carousel con las imágenes %>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div id="my_carousel" class="carousel slide" data-ride="carousel">

      <%# Indicadores %>
      <ol class="carousel-indicators">
        <% count = 0 %>
        <% @ads.each do |ad| %>
            <% if count == 0 %>
                <li class="active" data-slide-to= <%=count%> data-target="#my_carousel"></li>
            <% else %>
                <li data-slide-to= <%=count%> data-target="#my_carousel"></li>
            <% end %>
            <% count = count + 1 %>
        <% end %>
      </ol>
      <%# Wrappers para los slides %>
      <div class="carousel-inner" role="listbox">
        <% count = 0 %>
        <% @ads.each do |ad| %>
            <% if count == 0 %>
                <div class="item active">
                  <%= image_tag ad.image_carousel_url %>
                  <div class="carousel-caption">
                    <h3> <%= ad.title %></h3>
                  </div>
                </div>
            <% else %>
                <div class="item">
                  <%= image_tag ad.image_carousel_url %>
                  <div class="carousel-caption">
                    <h3><%= ad.title %></h3>
                  </div>
                </div>
            <% end %>
            <% count = count + 1 %>
        <% end %>
        <%# Para que la transicion se haga sola %>
        <%# Izquierdo %>
        <a data-slide="prev" href="#my_carousel" role="button"></a>
        <%# Derecho %>
        <a data-slide="prev" href="#my_carousel" role="button"></a>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h2>Acá luego se pone informacion propia de la escuela</h2>
    <hr/>
  </div>
</div>