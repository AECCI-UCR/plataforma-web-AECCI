<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h1>Cursos impartidos en la ECCI</h1>
    <hr/>
  </div>
</div>
<div class="row">
  <div class="col-md-8 col-md-offset-3">
    <%= select_tag :course_name, options_from_collection_for_select(@courses, :id, :name), prompt: 'Escriba el nombre del curso', class: 'form-control' %>
  </div>
</div>
<br/>
<div class="row">
  <div class="col-md-8 col-md-offset-3">
    <hr/>
  </div>
</div>
<div class="row">
  <div class="col-md-8 col-md-offset-3">
    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
      <%# Itera sobre cada año %>
      <% @years_of_courses.sort.each do |year, courses| %>
          <%# Acordión para cada año lectivo %>
          <% title = "#{romanize year} Año" %>
          <% heading_id = "heading_#{year}" %>
          <% collapse_id = "collapse_#{year}" %>

          <%= render layout: 'shared/accordion', locals: {title: title, heading_id: heading_id, expand: false, collapse_id: collapse_id} do %>
              <%# Itera por cada curso que pertenece a un año %>
              <% courses.each do |course| %>
                  <%# TODO: Botones con el link de cada curso %>
                  <p>Nombre del curso es: <span class="course-name"><%= course.name %></span>.</p>
                  <p>Las iniciales son: <%= course.initials %>.</p>
                  <b><%= link_to 'Ir a curso', professors_course_path(course) %></b>
              <% end %>
          <% end %>

      <% end %>
    </div>
  </div>
</div>
